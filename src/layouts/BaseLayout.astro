---
// src/layouts/BaseLayout.astro
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Te invitamos a nuestra boda" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Importación centralizada de Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Imperial+Script&family=Montserrat&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	<body>
		<slot /> <!-- Aquí se insertará el contenido de cada página -->
	</body>
</html>