// src/components/Hero.astro
---

<section>
    <img src="/eucalipto-top.png" alt="Adorno floral superior" class="adorno top" />
    <div class="contenido">
      <div class="nombres">
        <h1>Mayeli</h1>
        <span>+</span>
        <h1>Roel</h1>
      </div>
      <div id="countdown" class="contador">
        <div class="unidad">
          <span id="dias">00</span>
          <p>Días</p>
        </div>
        <div class="unidad">
          <span id="horas">00</span>
          <p>Horas</p>
        </div>
        <div class="unidad">
          <span id="minutos">00</span>
          <p>Minutos</p>
        </div>
        <div class="unidad">
          <span id="segundos">00</span>
          <p>Segundos</p>
        </div>
      </div>
    </div>
    <img src="/eucalipto-bottom.png" alt="Adorno floral inferior" class="adorno bottom" />
  </section>
  
  <script>
    // --- Lógica del Contador ---
    // Establece la fecha de la boda aquí
    const fechaBoda = new Date("Jun 7, 2026 16:00:00").getTime();
  
    const countdownFunction = setInterval(() => {
      const ahora = new Date().getTime();
      const distancia = fechaBoda - ahora;
  
      // Cálculos de tiempo
      const dias = Math.floor(distancia / (1000 * 60 * 60 * 24));
      const horas = Math.floor((distancia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutos = Math.floor((distancia % (1000 * 60 * 60)) / (1000 * 60));
      const segundos = Math.floor((distancia % (1000 * 60)) / 1000);
  
      // Mostrar en el HTML
      document.getElementById("dias")!.innerText = dias.toString().padStart(2, '0');
      document.getElementById("horas")!.innerText = horas.toString().padStart(2, '0');
      document.getElementById("minutos")!.innerText = minutos.toString().padStart(2, '0');
      document.getElementById("segundos")!.innerText = segundos.toString().padStart(2, '0');
  
      // Si la cuenta atrás termina
      if (distancia < 0) {
        clearInterval(countdownFunction);
        document.getElementById("countdown")!.innerHTML = "¡Llegó el gran día!";
      }
    }, 1000);
  </script>
  
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Parisienne&family=Montserrat:wght@300&display=swap');
  
    section {
      background-color: #F8F4F0; /* Un color hueso suave que complementa la paleta */
      height: 100vh;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      position: relative;
      overflow: hidden; /* Para que los adornos no causen scroll */
    }
  
    .contenido {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: #AD833C; /* Color dorado principal de tu paleta */
      padding: 20px;
      z-index: 10;
    }
  
    .nombres h1 {
      font-family: 'Parisienne', cursive;
      font-size: 6rem;
      font-weight: 400;
      margin: 0;
      line-height: 1;
    }
  
    .nombres span {
      font-family: 'Montserrat', sans-serif;
      font-size: 2rem;
      color: #D6BD93; /* Dorado más claro para el "+" */
      margin: 10px 0;
    }
    
    .contador {
      display: flex;
      gap: 20px;
      margin-top: 30px;
    }
  
    .unidad {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 80px;
    }
  
    .unidad span {
      font-family: 'Montserrat', sans-serif;
      font-size: 2.5rem;
      font-weight: 300;
      color: #AD833C;
    }
  
    .unidad p {
      font-family: 'Montserrat', sans-serif;
      font-size: 0.8rem;
      text-transform: uppercase;
      color: #D6BD93;
      margin-top: 5px;
    }
  
    .adorno {
      position: absolute;
      left: 0;
      width: 100%;
      height: auto;
      object-fit: contain;
    }
  
    .adorno.top {
      top: -20px; /* Ajuste para que se vea bien */
    }
  
    .adorno.bottom {
      bottom: -20px; /* Ajuste para que se vea bien */
    }
  
    /* Estilos para móviles */
    @media (max-width: 600px) {
      .nombres h1 {
        font-size: 4rem;
      }
      .contador {
          gap: 10px;
      }
      .unidad {
          width: 65px;
      }
      .unidad span {
          font-size: 2rem;
      }
    }
  
  </style>