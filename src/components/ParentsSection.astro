---
interface Props {
  brideName: string;
  groomName: string;
  brideParents: string[];
  groomParents: string[];
}

const { brideName, groomName, brideParents, groomParents } = Astro.props;
---

<section class="parents-section">
  <div class="frame-outer">
    <div class="frame-inner">
      <p class="message">Con la bendición de Dios y en compañía de nuestros padres</p>

      <div class="parents-grid">
        <div class="parents-column">
          {brideParents.map((name) => <p>{name}</p>)}
        </div>
        <div class="parents-column">
          {groomParents.map((name) => <p>{name}</p>)}
        </div>
      </div>

      <div class="couple-names">
        <h1>{brideName}</h1>
        <span>&</span>
        <h1>{groomName}</h1>
      </div>

      <p class="message">Tenemos el honor de invitarlos a la celebración de nuestro matrimonio</p>
    </div>
  </div>
</section>

<style>
  .parents-section {
    background-color: var(--soft-white);
  }

  .frame-outer {
    max-width: 550px;
    margin: 0 auto;
    background-color: var(--white);
    padding: 50px 15px 50px 15px; /* Espacio que crea el marco exterior */
    box-shadow: 0 5px 25px rgba(0,0,0,0.07);
  }

  .frame-inner {
    border: 1px solid var(--sand);
    padding: clamp(30px, 8vw, 60px) clamp(20px, 5vw, 40px);
    text-align: center;
  }

  .message {
    font-family: var(--font-serif);
    font-size: clamp(1.1rem, 3vw, 1.3rem);
    line-height: 1.7;
    max-width: 30ch;
    margin: 0 auto;
  }

  .parents-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 40px 0;
    font-family: var(--font-serif);
  }

  .parents-column p {
    font-size: 1rem;
    margin: 5px 0 0;
    line-height: 1.5;
  }

  .couple-names {
    margin: 50px 0;
  }

  .couple-names h1 {
    /* CAMBIO: Usando la fuente del Hero Banner principal */
    font-family: var(--font-heading); 
    font-size: clamp(4rem, 15vw, 6rem);
    font-weight: 400;
    color: var(--gold);
    line-height: 1;
    margin: 0;
  }
  
  .couple-names span {
    font-family: var(--font-sans);
    font-size: 2rem;
    color: var(--sand);
    margin: 10px 0;
  }
</style>